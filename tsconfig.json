{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "experimentalDecorators": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["./src"]
}
